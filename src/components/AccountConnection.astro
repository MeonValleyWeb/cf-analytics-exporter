---
import { SignedIn, SignedOut, SignInButton } from '@clerk/astro/react';
---

<div class="rounded-xl border border-gray-200 bg-white p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h2 class="text-lg font-semibold text-gray-900">Connect Cloudflare Account</h2>
      <p class="mt-1 text-sm text-gray-600">
        Use Cloudflare OAuth to access all zones and select a domain.
      </p>
    </div>
  </div>

  <SignedOut client:load>
    <div class="mt-4 rounded-lg bg-gray-50 p-4 text-sm text-gray-600">
      Sign in to connect your Cloudflare account.
      <SignInButton mode="modal" client:load>
        <button class="ml-2 rounded-md bg-orange-600 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 transition-colors">
          Sign In
        </button>
      </SignInButton>
    </div>
  </SignedOut>

  <SignedIn client:load>
    <div class="mt-6 space-y-4">
      <div class="flex flex-wrap items-center gap-3">
        <button
          id="cf-oauth-connect"
          type="button"
          class="rounded-md bg-orange-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 transition-colors"
        >
          Connect Cloudflare
        </button>
        <span id="cf-oauth-status" class="text-sm text-gray-500"></span>
      </div>
      <div>
        <label for="cf-zone-select" class="block text-sm font-medium text-gray-700">
          Select a zone
        </label>
        <select
          id="cf-zone-select"
          class="mt-2 w-full rounded-md border border-gray-200 px-3 py-2 text-sm focus:border-orange-500 focus:outline-none focus:ring-1 focus:ring-orange-500"
        >
          <option value="">Connect to load zones</option>
        </select>
      </div>
    </div>
  </SignedIn>
</div>

<script>
  const connectBtn = document.getElementById('cf-oauth-connect');
  const statusEl = document.getElementById('cf-oauth-status');
  const zoneSelect = document.getElementById('cf-zone-select');

  function getUserId() {
    return window.Clerk?.user?.id || null;
  }

  async function startOAuth() {
    const userId = getUserId();
    if (!userId) {
      statusEl.textContent = 'Sign in required.';
      return;
    }

    statusEl.textContent = 'Redirecting to Cloudflare...';

    const res = await fetch('/.netlify/functions/cf-oauth-start', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        userId,
        returnTo: window.location.pathname
      })
    });

    const data = await res.json();
    if (data?.url) {
      window.location.href = data.url;
    } else {
      statusEl.textContent = data?.error || 'Unable to start OAuth.';
    }
  }

  async function loadZones() {
    const userId = getUserId();
    if (!userId) {
      return;
    }

    statusEl.textContent = 'Loading zones...';

    const res = await fetch('/.netlify/functions/cf-zones', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ userId })
    });

    const data = await res.json();
    if (data?.error) {
      statusEl.textContent = data.error;
      return;
    }

    const zones = data?.zones || [];
    zoneSelect.innerHTML = '';
    if (zones.length === 0) {
      zoneSelect.innerHTML = '<option value="">No zones found</option>';
      statusEl.textContent = 'No zones available.';
      return;
    }

    zoneSelect.innerHTML = '<option value="">Select a zone</option>';
    zones.forEach(zone => {
      const option = document.createElement('option');
      option.value = zone.id;
      option.textContent = zone.name;
      zoneSelect.appendChild(option);
    });

    const stored = localStorage.getItem('cf_selected_zone');
    if (stored) {
      try {
        const parsed = JSON.parse(stored);
        if (parsed.zoneId) {
          zoneSelect.value = parsed.zoneId;
        }
      } catch (error) {
        localStorage.removeItem('cf_selected_zone');
      }
    }

    statusEl.textContent = 'Zones loaded.';
  }

  function handleZoneSelect() {
    const zoneId = zoneSelect.value;
    const zoneName = zoneSelect.options[zoneSelect.selectedIndex]?.text || '';
    if (!zoneId) {
      return;
    }

    const payload = { zoneId, zoneName };
    localStorage.setItem('cf_selected_zone', JSON.stringify(payload));
    window.dispatchEvent(new CustomEvent('zone-selected', { detail: payload }));
  }

  connectBtn?.addEventListener('click', startOAuth);
  zoneSelect?.addEventListener('change', handleZoneSelect);

  document.addEventListener('DOMContentLoaded', loadZones);
  window.addEventListener('clerk:loaded', loadZones);
</script>
